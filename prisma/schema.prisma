generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CATAGORY {
  FRONTEND
  BACKEND
  TOOLS
}

enum SOCIAL {
  INSTAGRAM
  GITHUB
  LINKEDIN
  X
}

model Basic {
  email      String @id
  firstName  String
  lastName   String
  contact    String
  occupation String
  slogan     String
  title      String
  logo       String
  mainImg    String
}

model About {
  text1 String
  text2 String
  text3 String
  img   String
  cv    String

  @@id([text1, text2, text3])
}

model Social {
  id   String @id @default(cuid())
  name SOCIAL @unique
  link String
}

model Category {
  id     String   @id @default(cuid())
  name   CATAGORY @unique
  icon   String
  Skills Skill[]  @relation("SkillCategory")
}

model Skill {
  id    String @id @default(cuid())
  name  String @unique
  level Int?
  icon  String

  categories Category[] @relation("SkillCategory")
}
